<%= link_to '新增使用者', new_user_path %>
<hr/>

<% if @users.present? %>
  <table>
   <thead>
    <tr>
       <th>id</th>
       <th>name</th>
       <th>account</th>
       <th>password</th>
       <th>created_at</th>
       <th>job</th>

       <th>show</th>
       <th>edit</th>
       <th>delete</th>
    </tr>
   </thead>
   <tbody>
   <% @users.each do |user| %>
        <tr>
           <th><%= user.id %></th>
           <th><%= user.name %></th>
           <th><%= user.account %></th>
           <th><%= user.password %></th>
           <th><%= user.created_at %></th>
           <th><%= user.job ? (link_to user.job.name, job_path(user.job)) : '無' %></th>

           <th><%= link_to 'show', user_path(user) %></th>
           <th><%= link_to 'edit', edit_user_path(user) %></th>
           <th><%= link_to 'delete', user_path(user), :method => :delete%></th>
        </tr>
   <% end %>
   </tbody>
  </table>
<% else %>
  <div>No any data.</div>
<% end %>
